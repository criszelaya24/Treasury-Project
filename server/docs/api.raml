/currencies:
  description: All currencies endpoint
  get:
    is: [withAuthHeaders]
    description: Retrieve all currencies
    responses:
      200:
        body:
            application/json:
              example: |
                {
                  "message": "All currencies",
                  "data": [
                      {
                          "id": 1,
                          "name": "Dolar Americano",
                          "symbol": "USD"
                      }
                    ]
                }
      403:
        body:
                application/json:
                  example: |
                    {
                        "message": "Token Invalid"
                    }
      404:
        body:
                application/json:
                  example: |
                    {
                        "message": "Not currencies found"
                    }
  post:
    is: [withAuthHeaders]
    description: Create new currency
    body:
          application/json:
            properties:
              name:
                description: name of the currency
                type: string
                required: true
              symbol:
                description: symbol of the currency
                type: string
                required: true
            example: |
              {
                    "name": "Peso chileno",
                    "symbol": "CLP"
              }
    responses:
      201:
        body:
            application/json:
              example: |
                {
                    "message": "currency created",
                    "currency": {
                        "id": 2,
                        "name": "Peso chileno",
                        "symbol": "CLP"
                }
      403:
        body:
                application/json:
                  example: |
                    {
                        "message": "Token Invalid"
                    }
/currencies/:id:
  get:
    is: [withAuthHeaders]
    description: Retrieve all currencies
    queryParameters:
      id:
        description: id of the currency
