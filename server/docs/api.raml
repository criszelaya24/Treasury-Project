                application/json:
                  example: |
                    {
                        "message": "Token Invalid"
                    }
      404:
        body:
                application/json:
                  example: |
                    {
                        "message": "user not finded"
                    }
  delete:
    is: [withAuthHeaders]
    description: Delete an specific user
    responses:
      200:
